{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/tests/LanguageLab.NewClassLib.Tests/LanguageLab.NewClassLib.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build release package",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "-o:${workspaceFolder}/nuget",
                "-c:Release",
                "${workspaceFolder}/src/LanguageLab.NewClassLib/LanguageLab.NewClassLib.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/tests/LanguageLab.NewClassLib.Tests/LanguageLab.NewClassLib.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=${workspaceFolder}/coverage/lcov.info",
                "${workspaceFolder}/tests/LanguageLab.NewClassLib.Tests/LanguageLab.NewClassLib.Tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": "test"
        },
        {
            "label": "test report",
            "dependsOn": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "c:/users/danma/.nuget/packages/reportgenerator/4.5.8/tools/netcoreapp3.0/ReportGenerator.dll",
                "-reports:${workspaceFolder}/coverage/lcov.info",
                "-targetdir:${workspaceFolder}/coverage/report"
            ],
            "problemMatcher": "$msCompile",
            "group": "test"
        }
    ]
}