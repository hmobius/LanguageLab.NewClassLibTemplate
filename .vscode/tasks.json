{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/tests/LanguageLab.NewClassLib.Tests/LanguageLab.NewClassLib.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/tests/LanguageLab.NewClassLib.Tests/LanguageLab.NewClassLib.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/tests/LanguageLab.NewClassLib.Tests/LanguageLab.NewClassLib.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/tests/LanguageLab.NewClassLib.Tests/LanguageLab.NewClassLib.Tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "test with coverage",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=${workspaceFolder}/coverage/lcov.info",
                "${workspaceFolder}/tests/LanguageLab.NewClassLib.Tests/LanguageLab.NewClassLib.Tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "test report",
            "command": "dotnet",
            "type": "process",
            "args": [
                "c:/users/maharryd/.nuget/packages/reportgenerator/4.4.5/tools/netcoreapp3.0/ReportGenerator.dll",
                "-reports:${workspaceFolder}/coverage/lcov.info",
                "-targetdir:${workspaceFolder}/coverage/report"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "create package",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "-o:${workspaceFolder}/nuget",
                "-c:Release",
                "${workspaceFolder}/src/LanguageLab.NewClassLib/LanguageLab.NewClassLib.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}